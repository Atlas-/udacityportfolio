<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/title"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/spotify"
        android:layout_below="@id/title"
        style="@style/AppTheme.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/udacity_button"
        android:text="@string/spotify_streamer"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_centerHorizontal="true"
        android:maxWidth="150dp"
        android:layout_toLeftOf="@+id/title" />

    <Button
        android:id="@+id/scores"
        style="@style/AppTheme.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/udacity_button"
        android:layout_below="@id/spotify"
        android:text="@string/scores_app"
        android:layout_alignRight="@+id/spotify"
        android:layout_alignLeft="@+id/spotify"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/library"
        style="@style/AppTheme.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/udacity_button"
        android:layout_below="@id/scores"
        android:text="@string/library_app"
        android:layout_alignRight="@+id/spotify"
        android:layout_alignLeft="@+id/spotify" />

    <Button
        android:id="@+id/build_bigger"
        style="@style/AppTheme.Button"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/udacity_button"
        android:text="@string/build_it_bigger"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/title"
        android:layout_toEndOf="@+id/title"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:minWidth="150dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/xyz"
        style="@style/AppTheme.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/udacity_button"
        android:text="@string/xyx_reader"
        android:layout_below="@+id/build_bigger"
        android:layout_alignLeft="@+id/build_bigger"
        android:layout_alignRight="@+id/build_bigger"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/myApp"
        style="@style/AppTheme.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/primary_button"
        android:text="@string/capstone"
        android:layout_below="@+id/xyz"
        android:layout_alignLeft="@+id/xyz"
        android:layout_alignRight="@+id/build_bigger" />

</RelativeLayout>
